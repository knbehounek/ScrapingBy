
<nav>
  <div class="nav-wrapper">
    <ul class="left hide-on-med-and-down">
      <a href="#" class="brand-logo center">NPR News<i class="fa fa-newspaper-o material-icons" aria-hidden="true"></i></a>
      <li class="active"><a href="#">Home</a></li>
      <li  class="modal-trigger savedArticles" href="#saveModal"><a>Saved Articles</a></li>
    </ul>
    <ul class="hide-on-med-and-down valign-wrapper right">
      <li><a class="waves-effect halfway-fab waves-effect waves-light hover searchArticle right"> Scrape <i class="material-icons right">add</i></a></li>
    </ul>
    <ul class="left hide-on-large-only">
      <li class="modal-trigger savedArticles" href="#saveModal"><a>Saved Articles</a></li>
      <li><i class="fa fa-newspaper-o material-icons" aria-hidden="true"></i></li>
    </ul>
    <ul class="hide-on-large-only valign-wrapper right">
      <li><a class=" waves-effect halfway-fab waves-effect waves-light hover searchArticle right"><i class="material-icons">add</i></a></li>
    </ul>
  </div>
</nav>

<!-- Main Container -->
<div class="container">
  <div class="row">
    {{#each data}}
      <div id="{{this.url}}">
        <div class="card">
          <div class="card-image">
            <img src="{{this.imageURL}}">
            <span class="card-title">{{this.headline}}</span>
            <a class="addArticle btn-floating halfway-fab waves-effect waves-light red modal-trigger"  href="#modalMessage" data-headline="{{this.headline}} " data-imageURL="{{this.imageURL}}" data-url="{{this.url}}" data-summary="{{this.summary}}"
              data-slug="{{this.slug}}"><i class="material-icons">add</i></a>
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">{{this.slug}}<i class="material-icons right">more_vert</i></span>
            <p><a href="{{this.url}}">Link to Article</a></p>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4">{{this.slug}}<i class="material-icons right">close</i></span>
            <p>{{this.summary}}</p>
          </div>

        </div>
      </div>
    {{/each}}
  </div>
</div>

<!-- Modals -->

<!-- Message Modal -->
<div id="modalMessage" class="modal waves-effect waves-green center">
  <div class="modal-content">
    <h4>Article Sucessfully Saved! <i class="fa fa-newspaper-o material-icons" aria-hidden="true"></i></h4>
  </div>
</div>

<!-- Individual Saved Article Modal -->
<div id="articleModal" class="modal modal-fixed-footer">
  <div class="modal-content center">
    <h4>Article <span id="articleID"></span></h4>
    <div class="articleNotes">
      <div class="boxComments">
        <div class="col s12 m7">
          <div class="card horizontal">
            <div class="card-image">
              <img src="https://lorempixel.com/100/190/nature/6">
            </div>
            <div class="card-stacked center">
              <div class="card-content valign-wrapper">
                <p>No Notes.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <form class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <textarea id="textarea1" class="materialize-textarea"></textarea>
            <label for="textarea1">Textarea</label>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat hover addComment">Add</a>
  </div>
</div>

<!-- Slide UP Articles Modal Structure -->
<div id="saveModal" class="modal bottom-sheet">
  <div class="modal-content">
    <h4>Saved Articles</h4>
    <ul class="collection">
    </ul>
  </div>
</div>